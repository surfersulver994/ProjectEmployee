@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}

<link href="../../Content/bootstrap.min.css" rel="stylesheet" />
<table class="table table-bordered table-striped">
    <tr>
        <th>OrderID</th>
        <th>OrderDate</th>
        <th>CustomerID</th>
        <th>TotalQty</th>
        <th>TotalQty</th>
        <th>Options</th>
    </tr>

    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][0]</td>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>@Model.Rows[i][4]</td>
            <td>
                <a href="@Url.Action("Edit", "Order", new { @id = @Model.Rows[i][0] })">Edit</a>
                <a href="@Url.Action("Delete", "Order", new { @id = @Model.Rows[i][0] })">Delete</a>
                <a href="@Url.Action("SubformGridview", "Subform", new { @id = @Model.Rows[i][0] })">Order Subform</a>
            </td>
        </tr>
    }
</table>

<a href="@Url.Action("Create", "Order")">Add Product</a>